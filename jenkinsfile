pipeline{
    agent any
    tools {
        terraform 'terraform 11'
    }
    stages{
        stage('Terraform fmt'){
            steps{
                echo 'formating code'
                sh 'terraform fmt'
            }
        }
        stage('Terraform Init'){
            steps{
                echo 'initializing'
                sh 'date'
                sh 'terraform init'
            }
        }
        stage('Terraform validate'){
            steps{
                sh 'terraform validate'
            }
        }
        stage('Terraform plan'){
            steps{
                sh 'terraform plan'
            }
        }
        stage('Terraform apply'){
            steps{
                sh 'terraform destroy --auto-approve'
            }
        }
    }
